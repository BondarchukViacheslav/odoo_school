<odoo>
    <record id="view_hr_hospital_visit_list" model="ir.ui.view">
        <field name="name">hr.hospital.visit.list</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <list decoration-info="state == 'planned'" decoration-success="state == 'completed'"
                  decoration-muted="state == 'cancelled'">
                <field name="planned_date"/>
                <field name="doctor_id"/>
                <field name="patient_id"/>
                <field name="visit_type"/>
                <field name="amount" sum="Total Amount"/>
                <field name="state" widget="badge" decoration-info="state == 'planned'"
                       decoration-success="state == 'completed'"/>
            </list>
        </field>
    </record>

    <record id="view_hr_hospital_visit_form" model="ir.ui.view">
        <field name="name">hr.hospital.visit.form</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(hr_hospital.hr_hospital_reschedule_visit_wizard_action)d"
                            string="Перенести візит"
                            type="action"
                            class="oe_highlight"
                            invisible="state != 'planned'"
                            context="{'default_visit_id': id, 'default_new_doctor_id': doctor_id}"/>

                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Scheduling">
                            <field name="planned_date"/>
                            <field name="actual_date" readonly="state != 'completed'"/>
                            <field name="visit_type"/>
                        </group>
                        <group string="Participants &amp; Cost">
                            <field name="doctor_id"/>
                            <field name="patient_id"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount" widget="monetary"/>
                            <field name="comment" placeholder="Comments about the visit..."/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Diagnoses" name="diagnoses">
                            <field name="diagnosis_ids">
                                <list editable="bottom">
                                    <field name="disease_id"/>
                                    <field name="description"/>
                                </list>
                            </field>
                        </page>
                        <page string="Recommendations" name="recommendations">
                            <field name="recommendations" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_hospital_visit_calendar" model="ir.ui.view">
        <field name="name">hr.hospital.visit.calendar</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <calendar string="Patient Visits"
                      date_start="planned_date"
                      color="doctor_id"
                      mode="week"
                      quick_create="0">
                <field name="patient_id"/>
                <field name="doctor_id" avatar_field="image_128"/>
                <field name="visit_type" filters="1"/>
                <field name="state" filters="1"/>
            </calendar>
        </field>
    </record>

    <record id="view_hr_hospital_visit_search" model="ir.ui.view">
        <field name="name">hr.hospital.visit.search</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <search string="Search Visits">
                <field name="name" string="Visit Reference"/>
                <field name="doctor_id"/>
                <field name="patient_id"/>

                <filter string="Planned" name="filter_planned" domain="[('state', '=', 'planned')]"/>
                <filter string="Completed" name="filter_completed" domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter string="Today" name="filter_today"
                        domain="[('planned_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),
                                 ('planned_date', '&lt;=', datetime.datetime.now().strftime('%Y-%m-%d 23:59:59'))]"/>

                <group>
                    <filter string="Status" name="group_by_state" context="{'group_by':'state'}"/>
                    <filter string="Doctor" name="group_by_doctor" context="{'group_by':'doctor_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_hr_hospital_visit_pivot" model="ir.ui.view">
        <field name="name">hr.hospital.visit.pivot</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <pivot string="Visits Analysis" sample="1">
                <field name="doctor_id" type="row"/>
                <field name="state" type="col"/>
                <field name="amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="hr_hospital_visit_action" model="ir.actions.act_window">
        <field name="name">Visit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.visit</field>
        <field name="view_mode">list,form,calendar,pivot</field>
    </record>

</odoo>
