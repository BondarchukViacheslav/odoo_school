<odoo>

    <record id="hr_hospital_visit_view_list" model="ir.ui.view">
        <field name="name">hr_hospital.visit.view.list</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <list>
                <field name="visit_date"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="diagnosis"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_visit_view_form" model="ir.ui.view">
        <field name="name">hr_hospital.visit.view.form</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <group>
                            <field name="visit_date"/>
                            <field name="patient_id"/>
                        </group>
                        <group>
                            <field name="doctor_id"/>
                            <field name="disease_id"/>
                            <field name="diagnosis"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_visit_action" model="ir.actions.act_window">
        <field name="name">Visit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.visit</field>
        <field name="view_mode">list,form</field>
    </record>

