<odoo>

    <record id="hr_hospital_patient_view_list" model="ir.ui.view">
        <field name="name">hr_hospital.patient.view.list</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <list string="Patients">
                <!--            З абстрактної моделі    -->
                <field name="full_name"/>
                <field name="last_name"/>
                <field name="first_name"/>
                <field name="middle_name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="gender"/>
                <field name="birth_date"/>
                <field name="age"/>
                <field name="country_id"/>
                <field name="lang_id"/>
                <!--            Додаткові поля з моделі пацієнтів   -->
                <field name="personal_doctor_id"/>
                <field name="passport_data"/>
                <field name="contact_person_id"/>
                <field name="blood_group"/>
                <field name="allergies"/>
                <field name="insurance_company_id"/>
                <field name="insurance_policy_number"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_patient_view_form" model="ir.ui.view">
        <field name="name">hr_hospital.patient.view.form</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient Card">
                <header>
                    <button name="action_create_quick_visit"
                            string="Quick Appointment"
                            type="object"
                            class="oe_highlight"/>

                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_visits"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-calendar"
                                string="Visits">
                        </button>
                    </div>

                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="last_name" placeholder="Last Name" class="oe_inline"/>
                            <field name="first_name" placeholder="First Name" class="oe_inline"/>
                            <field name="middle_name" placeholder="Middle Name" class="oe_inline"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Personal Information">
                            <field name="birth_date"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="passport_data"/>
                        </group>
                        <group string="Medical &amp; Contact">
                            <field name="personal_doctor_id"/>
                            <field name="blood_group"/>
                            <field name="phone" widget="phone"/>
                            <field name="email" widget="email"/>
                            <field name="country_id"/>
                            <field name="lang_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Medical Info" name="medical_info">
                            <group>
                                <field name="allergies" placeholder="Describe any known allergies..."/>
                            </group>
                        </page>
                        <page string="Insurance &amp; Emergency" name="insurance">
                            <group>
                                <field name="insurance_company_id"/>
                                <field name="insurance_policy_number"/>
                                <field name="contact_person_id"/>
                            </group>
                        </page>
                        <page string="Doctor History" name="doctor_history">
                            <field name="doctor_history_ids" readonly="1">
                                <list decoration-muted="active == False" decoration-success="active == True">
                                    <field name="doctor_id"/>
                                    <field name="appointment_date"/>
                                    <field name="change_date" string="End Date"/>
                                    <field name="active" widget="boolean_toggle" string="Current"/>
                                </list>
                            </field>
                        </page>
                        <page string="Diagnosis History" name="diagnoses_history">
                            <field name="diagnosis_ids" readonly="1">
                                <list>
                                    <field name="approval_date"/>
                                    <field name="doctor_id"/>
                                    <field name="disease_id"/>
                                    <field name="description"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_patient_view_search" model="ir.ui.view">
        <field name="name">hr.hospital.patient.search</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Search Patient">
                <!--                <field name="full_name" string="Name" filter_domain="[('full_name', 'ilike', self)]"/>-->
                <field name="last_name" string="Patient Details"
                       filter_domain="['|', '|', ('last_name', 'ilike', self), ('first_name', 'ilike', self), ('middle_name', 'ilike', self)]"/>
                <field name="phone" string="Phone" filter_domain="[('phone', 'ilike', self)]"/>

            </search>
        </field>
    </record>

    <record id="hr_hospital_patient_action" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.patient</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
