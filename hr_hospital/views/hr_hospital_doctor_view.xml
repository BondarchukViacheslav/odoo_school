<odoo>

    <record id="hr_hospital_doctor_view_list" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.view.list</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <list string="Doctors">
                <field name="last_name"/>
                <field name="first_name"/>
                <field name="specialty_id"/>
                <field name="license_number"/>
                <field name="is_intern" widget="boolean_toggle"/>
                <field name="mentor_id" optional="hide"/>
                <field name="rating"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_doctor_view_form" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.view.form</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor Card">
                <header></header>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>

                    <div class="oe_title">
                        <label for="last_name" class="oe_edit_only" string="Doctor Name"/>
                        <h1>
                            <field name="last_name" placeholder="Last Name" class="oe_inline" required="1"/>
                            <field name="first_name" placeholder="First Name" class="oe_inline" required="1"/>
                            <field name="middle_name" placeholder="Middle Name" class="oe_inline"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Professional Credentials">
                            <field name="specialty_id" options="{'no_create': True, 'no_open': False}"/>
                            <field name="license_number"/>
                            <field name="license_issue_date"/>
                            <field name="experience"/>
                            <field name="rating" widget="float"/>
                        </group>
                        <group string="Status &amp; Mentorship">
                            <field name="is_intern"/>
                            <field name="mentor_id"
                                   invisible="not is_intern"
                                   required="is_intern"
                                   options="{'no_create': True}"/>
                            <field name="user_id" options="{'no_create': True}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Working Schedule" name="schedule">
                            <field name="schedule_ids">
                                <list editable="bottom">
                                    <field name="day_of_week"/>
                                    <field name="start_hour" widget="float_time"/>
                                    <field name="end_hour" widget="float_time"/>
                                    <field name="appointment_type"/>
                                </list>
                            </field>
                        </page>
                        <page string="Personal Info" name="personal_info">
                            <group>
                                <group>
                                    <field name="birth_date"/>
                                    <field name="age"/>
                                    <field name="gender"/>
                                </group>
                                <group>
                                    <field name="country_study_id"/>
                                    <field name="phone" widget="phone"/>
                                    <field name="email" widget="email"/>
                                </group>
                            </group>
                        </page>
                        <page string="Assigned Patients" name="patients">
                            <field name="patient_ids" readonly="1">
                                <list>
                                    <field name="last_name"/>
                                    <field name="first_name"/>
                                    <field name="gender"/>
                                    <field name="age"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_doctor_action" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.doctor</field>
        <field name="view_mode">list,form</field>
    </record>

    <!--    <menuitem id="hr_hospital_menu_doctor"-->
    <!--              action="action_hr_hospital_doctor_window"-->
    <!--              parent="hr_hospital_patient_menu_doctor"-->
    <!--              name="Doctor" sequence="200"/>-->

</odoo>
