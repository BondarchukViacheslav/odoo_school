<odoo>

    <record id="hr_hospital_doctor_view_list" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.view.list</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <list string="Doctors">
                <field name="last_name"/>
                <field name="first_name"/>
                <field name="specialty_id"/>
                <field name="license_number"/>
                <field name="is_intern" widget="boolean_toggle"/>
                <field name="mentor_id" optional="hide"/>
                <field name="rating"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_doctor_view_form" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.view.form</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor Card">
                <header></header>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>

                    <div class="oe_title">
                        <label for="last_name" class="oe_edit_only" string="Doctor Name"/>
                        <h1>
                            <field name="last_name" placeholder="Last Name" class="oe_inline" required="1"/>
                            <field name="first_name" placeholder="First Name" class="oe_inline" required="1"/>
                            <field name="middle_name" placeholder="Middle Name" class="oe_inline"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Professional Credentials">
                            <field name="specialty_id" options="{'no_create': True, 'no_open': False}"/>
                            <field name="license_number"/>
                            <field name="license_issue_date"/>
                            <field name="experience"/>
                            <field name="rating" widget="float"/>
                            <field name="country_study_id"/>
                        </group>
                        <group string="Status &amp; Mentorship">
                            <field name="is_intern"/>
                            <field name="mentor_id"
                                   invisible="not is_intern"
                                   required="is_intern"
                                   options="{'no_create': True}"/>
                            <field name="user_id" options="{'no_create': True}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Working Schedule" name="schedule">
                            <field name="schedule_ids">
                                <list editable="bottom">
                                    <field name="day_of_week"/>
                                    <field name="start_hour" widget="float_time"/>
                                    <field name="end_hour" widget="float_time"/>
                                    <field name="appointment_type"/>
                                </list>
                            </field>
                        </page>
                        <page string="Personal Info" name="personal_info">
                            <group>
                                <group>
                                    <field name="birth_date"/>
                                    <field name="age"/>
                                    <field name="gender"/>
                                </group>
                                <group>
                                    <field name="country_study_id"/>
                                    <field name="phone" widget="phone"/>
                                    <field name="email" widget="email"/>
                                </group>
                            </group>
                        </page>
                        <page string="Assigned Patients" name="patients">
                            <field name="patient_ids" readonly="1">
                                <list>
                                    <field name="last_name"/>
                                    <field name="first_name"/>
                                    <field name="gender"/>
                                    <field name="age"/>
                                </list>
                            </field>
                        </page>

                        <page string="Interns" name="interns" invisible="is_intern">
                            <field name="intern_ids" mode="kanban" readonly="1">
                                <kanban>
                                    <field name="id"/>
                                    <field name="first_name"/>
                                    <field name="last_name"/>
                                    <field name="specialty_id"/>
                                    <field name="image_128"/>
                                    <templates>
                                        <t t-name="card">
                                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                                <div class="o_kanban_image">
                                                    <img t-att-src="record.image_128.raw_value ?
                                                        '/web/image/hr.hospital.doctor/' + record.id.raw_value + '/image_128' :
                                                        '/web/static/img/placeholder.png'"
                                                         alt="Intern Photo"
                                                         class="o_image_64_contain"/>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <strong class="o_kanban_record_title">
                                                        <field name="first_name"/>&#160;<field name="last_name"/>
                                                    </strong>
                                                    <div class="o_kanban_record_subtitle">
                                                        <field name="specialty_id"/>
                                                    </div>
                                                    <div class="o_kanban_record_subtitle">
                                                        <field name="license_number"/>
                                                    </div>
                                                    <div class="o_kanban_record_subtitle">
                                                        <field name="license_issue_date"/>
                                                    </div>
                                                    <div class="o_kanban_record_bottom">
                                                        <div class="oe_kanban_bottom_left">
                                                            <span>ID:
                                                                <field name="id"/>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>

                        <page string="Mentor Information" name="mentor_info" invisible="not is_intern or not mentor_id">
                            <group>
                                <group>
                                    <field name="mentor_photo" widget="image" class="oe_avatar" readonly="1"/>
                                </group>
                                <group>
                                    <field name="mentor_full_name" readonly="1"/>
                                    <field name="mentor_specialty_id" readonly="1"/>
                                    <field name="mentor_license_number" readonly="1"/>
                                    <field name="mentor_license_issue_date" readonly="1"/>
                                </group>
                            </group>
                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.search</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <search string="Search Doctors">
                <filter string="Interns"
                        name="filter_interns"
                        domain="[('is_intern', '=', True)]"/>

                <filter string="Mentors"
                        name="filter_mentors"
                        domain="[('is_intern', '=', False)]"/>

                <separator/>

            </search>
        </field>
    </record>

    <record id="view_hr_hospital_doctor_kanban" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.kanban</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban default_group_by="specialty_id" class="o_kanban_small_column">
                <field name="id"/>
                <field name="full_name"/>
                <field name="specialty_id"/>
                <field name="image_128"/>
                <field name="is_intern"/>
                <field name="intern_ids"/>
                <field name="rating"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown"
                                   href="#" aria-label="Settings" title="Settings">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a t-if="widget.editable" role="menuitem" type="open" class="dropdown-item">Edit</a>
                                    <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">
                                        Delete
                                    </a>
                                </div>
                            </div>
                            <div class="o_kanban_image">
                                <img t-att-src="record.image_128.raw_value ?
                                                                '/web/image/hr.hospital.doctor/' + record.id.raw_value + '/image_128' :
                                                                '/web/static/img/placeholder.png'"
                                     alt="Doctor Photo"
                                     class="o_image_64_contain"/>
                            </div>

                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="full_name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="specialty_id"/>
                                </div>

                                <t t-if="record.intern_ids.raw_value.length > 0">
                                    <div class="mt-2" style="font-size: 0.85rem; color: #666;">
                                        <strong>Interns:</strong>
                                        <div class="mt-1">
                                            <field name="intern_ids" widget="many2many_tags"/>
                                        </div>
                                    </div>
                                </t>

                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <button name="action_create_visit_from_kanban"
                                                type="object"
                                                class="btn btn-primary btn-sm">
                                            <i class="fa fa-calendar-plus-o"/>Book Visit
                                        </button>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <i class="fa fa-star text-warning" role="img" aria-label="Rating"
                                           title="Rating"/>
                                        <field name="rating"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="hr_hospital_doctor_action" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.doctor</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

</odoo>
