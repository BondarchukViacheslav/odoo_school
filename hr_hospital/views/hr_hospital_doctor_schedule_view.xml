<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_doctor_schedule_view_list" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.schedule.view.list</field>
        <field name="model">hr.hospital.doctor.schedule</field>
        <field name="arch" type="xml">
            <list>
                <field name="doctor_id" options="{'no_create': True}" domain="[('specialty_id', '!=', False)]"/>
                <field name="day_of_week"/>
                <field name="start_hour" widget="float_time"/>
                <field name="end_hour" widget="float_time"/>
                <field name="appointment_type" widget="badge"
                       decoration-info="appointment_type == 'online'"
                       decoration-success="appointment_type == 'offline'"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_doctor_schedule_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.schedule.view.form</field>
        <field name="model">hr.hospital.doctor.schedule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Doctor Information">
                            <field name="doctor_id"/>
                            <field name="day_of_week"/>
                        </group>
                        <group string="Working Hours">
                            <field name="start_hour" widget="float_time"/>
                            <field name="end_hour" widget="float_time"/>
                            <field name="appointment_type"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_doctor_schedule_action" model="ir.actions.act_window">
        <field name="name">Doctor Schedules</field>
        <field name="res_model">hr.hospital.doctor.schedule</field>
        <field name="view_mode">list,form</field>
        <!--        <field name="context">{'search_default_group_by_doctor': 1, 'search_default_group_by_day': 1}</field>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Set up working hours for your doctors.
            </p>
        </field>
    </record>
</odoo>
