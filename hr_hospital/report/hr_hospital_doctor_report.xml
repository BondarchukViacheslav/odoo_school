<odoo>

    <record id="action_report_doctor_card" model="ir.actions.report">
        <field name="name">Doctor's report</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_hospital.report_doctor_card_template</field>
        <field name="report_file">hr_hospital.report_doctor_card_template</field>
        <field name="print_report_name">'Report - %s' % (object.full_name)</field>
        <field name="binding_model_id" ref="model_hr_hospital_doctor"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
    </record>

    <template id="report_doctor_card_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doctor">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Report title</h2>
                        <p>This object's name is
                            <span t-field="doctor.full_name"/>
                        </p>
                    </div>
                </t>
            </t>
        </t>
    </template>


