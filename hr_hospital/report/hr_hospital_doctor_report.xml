    <template id="report_doctor_card_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doctor">
                <t t-call="web.external_layout">
                    <div class="page o_content_pdf">

                        <!--                        <div class="row mb-4">-->
                        <!--                            <div class="col-3">-->
                        <!--                                <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)"-->
                        <!--                                     style="max-height: 90px;"/>-->
                        <!--                            </div>-->
                        <!--                            <div class="col-9 text-end">-->
                        <!--                                <h3 t-field="res_company.name"/>-->
                        <!--                                <div t-field="res_company.partner_id"-->
                        <!--                                     t-options='{"widget": "contact", "fields": ["address", "phone", "email"], "no_marker": True}'/>-->
                        <!--                            </div>-->
                        <!--                        </div>-->

                        <div class="text-center mb-4">
                            <h2>
                                <span t-field="doctor.full_name"/>
                            </h2>
                            <h4>Specialty:
                                <span t-field="doctor.specialty_id.name"/>
                            </h4>
                        </div>

                        <div class="mt-4">
                            <h3>Visit history</h3>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Patient</th>
                                        <th>Visit type</th>
                                        <th>State</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doctor.env['hr.hospital.visit'].search([('doctor_id', '=', doctor.id)], order='planned_date desc')"
                                       t-as="visit">
                                        <tr>
                                            <td>
                                                <span t-field="visit.planned_date"/>
                                            </td>
                                            <td>
                                                <span t-field="visit.patient_id.full_name"/>
                                            </td>
                                            <td>
                                                <span t-field="visit.visit_type"/>
                                            </td>
                                            <td>
                                                <span t-attf-class="badge #{'bg-warning' if visit.state == 'planned' else 'bg-success' if visit.state == 'completed' else 'bg-danger' if visit.state == 'cancelled' else 'bg-secondary'}">
                                                    <span t-field="visit.state"/>
                                                </span>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-4">
                            <h3>Patients</h3>
                            <table class="table table-bordered table-sm">
                                <thead>
                                    <tr>
                                        <th>Patient</th>
                                        <th>Gender</th>
                                        <th>Birth day</th>
                                        <th>Phone</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doctor.patient_ids" t-as="patient">
                                        <tr>
                                            <td>
                                                <span t-field="patient.full_name"/>
                                            </td>
                                            <td>
                                                <span t-field="patient.gender"/>
                                            </td>
                                            <td>
                                                <span t-field="patient.birth_date"/>
                                            </td>
                                            <td>
                                                <span t-field="patient.phone"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>