<odoo>
    <record id="hr_hospital_disease_report_wizard_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.disease.report.wizard.form</field>
        <field name="model">hr.hospital.disease.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group string="Period">
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group string="Settings">
                        <field name="report_type" widget="radio"/>
                        <field name="group_by"/>
                    </group>
                </group>
                <group string="Filters">
                    <field name="doctor_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    <field name="disease_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    <field name="country_ids" widget="many2many_tags" options="{'no_create': True}"/>
                </group>
                <footer>
                    <button name="action_get_report" string="Generate Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="hr_hospital_disease_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Disease Report</field>
        <field name="res_model">hr.hospital.disease.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
