<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_doctor_schedule_wizard_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.schedule.wizard.form</field>
        <field name="model">hr.hospital.doctor.schedule.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Schedule">
                <sheet>
                    <group>
                        <group string="Main Info">
                            <field name="doctor_id" options="{'no_create': True}"/>
                            <field name="schedule_type"/>
                        </group>
                        <group string="Duration">
                            <field name="start_date"/>
                            <field name="weeks_count"/>
                        </group>
                    </group>
                    <separator string="Working Days"/>
                    <div class="o_row">
                        <field name="mo"/>
                        <label for="mo"/>
                        <field name="tu"/>
                        <label for="tu"/>
                        <field name="we"/>
                        <label for="we"/>
                        <field name="th"/>
                        <label for="th"/>
                        <field name="fr"/>
                        <label for="fr"/>
                        <field name="sa" class="text-danger"/>
                        <label for="sa"/>
                        <field name="su" class="text-danger"/>
                        <label for="su"/>
                    </div>
                    <group string="Time Slots">
                        <group>
                            <field name="start_hour" widget="float_time"/>
                            <field name="end_hour" widget="float_time"/>
                        </group>
                        <group>
                            <field name="break_start" widget="float_time"/>
                            <field name="break_end" widget="float_time"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_generate_schedule" string="Generate" type="object" class="btn-primary"/>
                    <button string="Discard" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="hr_hospital_doctor_schedule_wizard_action" model="ir.actions.act_window">
        <field name="name">Fill Doctor Schedule</field>
        <field name="res_model">hr.hospital.doctor.schedule.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
